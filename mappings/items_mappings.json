{
  "mappings": {
    "dynamic_templates": [
      {
        "strings_as_keywords": {
          "match_mapping_type": "string",
          "mapping": {
            "type": "keyword",
            "index": false
          }
        }
      },
      {
        "booleans_as_keywords": {
          "match_mapping_type": "boolean",
          "mapping": {
            "type": "keyword",
            "index": false
          }
        }
      },
      {
        "dates_as_keywords": {
          "match_mapping_type": "date",
          "mapping": {
            "type": "keyword",
            "index": false
          }
        }
      }
    ],
    "properties": {
      "language": {"type": "keyword"},
      "context": {
        "properties": {
          "domain": {"type": "keyword"},
          "country": {"type": "keyword"},
          "city": {"type": "keyword"},
          "action": {"type": "keyword"},
          "bpp_id": {"type": "keyword"},
          "transaction_id": {"type": "keyword"},
          "message_id": {"type": "keyword"}
        }
      },
      "item_details": {
        "properties": {
          "id": {"type": "keyword"},
          "parent_item_id": {"type": "keyword"},
          "descriptor": {
            "properties": {
              "name": {"type": "text"},
              "code": {"type": "keyword"}
            }
          },
          "price": {
            "properties": {
              "value": {"type": "float"}
            }
          },
          "category_id": {"type": "keyword"},
          "fulfillment_id": {"type": "keyword"},
          "location_id": {"type": "keyword"}
        }
      },
      "provider_details": {
        "properties": {
          "id": {"type": "keyword"},
          "descriptor": {
            "properties": {
              "name": {"type": "text"}
            }
          }
        }
      },
      "location_details": {
        "properties": {
          "id": {"type": "keyword"},
          "gps": {"type": "geo_point"},
          "circle": {
            "properties": {
              "gps": {"type": "geo_point"}
            }
          },
          "type": {"type": "keyword"},
          "polygons": {"type": "geo_shape"}
        }
      },
      "bpp_details": {
        "properties": {
          "name": {"type": "text"},
          "bpp_id": {"type": "keyword"}
        }
      },
      "type": {"type": "keyword"},
      "created_at": {"type": "date"},
      "local_id": {"type": "keyword"},
      "id": {"type": "keyword"},
      "variant_group": {
        "properties": {
          "id": {"type": "keyword"},
          "attribute_codes": {"type": "keyword"}
        }
      },
      "customisation_groups": {
        "type": "nested",
        "properties": {
          "id": {
            "type": "keyword"
          },
          "local_id": {
            "type": "keyword"
          }
        }
      },
      "customisation_menus": {
        "type": "nested",
        "properties": {
          "descriptor": {
            "properties": {
              "name": {
                "type": "text"
              }
            }
          },
          "id": {
            "type": "keyword"
          },
          "local_id": {
            "type": "keyword"
          },
          "parent_category_id": {
            "type": "keyword"
          }
        }
      },
      "customisation_group_id": {"type": "keyword"},
      "customisation_nested_group_id": {"type": "keyword"},
      "is_first": {"type": "boolean"}
    }
  }
}
